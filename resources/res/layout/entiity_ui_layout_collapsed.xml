<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:layout_gravity="start" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:textColor="@color/black" android:id="@+id/collapsed_title" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <TextView android:textColor="@color/black" android:id="@+id/collapsed_subtitle" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView android:layout_gravity="end" android:id="@+id/collapsed_image" android:layout_width="100dp" android:layout_height="match_parent" android:scaleType="centerInside" android:contentDescription="@string/rich_notification_image"/>
</FrameLayout>
