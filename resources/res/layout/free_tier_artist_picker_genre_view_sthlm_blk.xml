<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/genre_view" android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <FrameLayout android:layout_gravity="top" android:id="@+id/image_container" android:layout_width="match_parent" android:layout_height="wrap_content">
        <FrameLayout android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:foreground="@drawable/fg_free_tier_artist_picker_item">
            <com.spotify.paste.widgets.SquareImageView android:id="@+id/image" android:layout_width="match_parent" android:layout_height="wrap_content" android:contentDescription="@string/free_tier_taste_onboarding_artist_picker_content_description_genre_image"/>
        </FrameLayout>
        <com.spotify.paste.widgets.SquareImageView android:id="@+id/flatbg" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:contentDescription="@string/free_tier_taste_onboarding_artist_picker_content_description_genre_image"/>
        <me.grantland.widget.AutofitTextView android:textAppearance="@style/TextAppearance_Encore_MestoBold" android:ellipsize="end" android:gravity="center" android:layout_gravity="center" android:id="@+id/name" android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="3"/>
    </FrameLayout>
</FrameLayout>
