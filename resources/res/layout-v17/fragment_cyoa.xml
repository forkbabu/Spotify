<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="top|center_vertical|center_horizontal|center" android:orientation="vertical" android:padding="20dp" android:paddingBottom="100dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/image" android:layout_width="100dp" android:layout_height="100dp"/>
        <TextView android:textAppearance="?attr/pasteTextAppearanceHeading" android:id="@+id/name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:layout_marginBottom="15dp"/>
        <TextView android:textAppearance="?attr/pasteTextAppearanceSecondary" android:id="@+id/desc" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:textAppearance="?attr/pasteTextAppearanceHeaderMedium" android:textColor="@color/red" android:id="@+id/additionalText" android:paddingTop="20dp" android:paddingBottom="20dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textAlignment="center"/>
        <TextView android:textAppearance="?attr/pasteTextAppearanceHeaderMedium" android:textColor="@color/red" android:id="@+id/gameOverNotice" android:paddingTop="20dp" android:paddingBottom="20dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/game_over" android:textAlignment="center"/>
        <Button android:id="@+id/tryAgainButton" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="@string/try_again" android:filterTouchesWhenObscured="false" style="?attr/glueButtonPrimaryGreen"/>
        <Button android:id="@+id/revealOptionsButton" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="@string/reveal_options_early" android:filterTouchesWhenObscured="false" style="?attr/glueButtonSecondary"/>
        <Button android:id="@+id/button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="@string/start" android:filterTouchesWhenObscured="false" style="?attr/glueButtonPrimaryGreen"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/options" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
