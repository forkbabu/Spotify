<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textColor="@color/black" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <TextView android:textColor="@color/black" android:id="@+id/subtitle" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="10dp">
        <LinearLayout android:layout_gravity="start" android:orientation="horizontal" android:id="@+id/interaction_layout" android:background="@color/gray_90" android:layout_width="wrap_content" android:layout_height="match_parent">
            <ImageView android:layout_gravity="center_vertical" android:id="@+id/entity_ui_image" android:layout_width="100dp" android:layout_height="100dp" android:scaleType="centerCrop" android:contentDescription="@string/rich_notification_image"/>
            <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="10dp" android:layout_marginEnd="70dp">
                <TextView android:textColor="@color/black" android:id="@+id/entity_ui_title" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                <TextView android:textColor="@color/black" android:id="@+id/entity_ui_subtitle" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <ImageButton android:layout_gravity="right|center_vertical|center_horizontal|center|end" android:id="@+id/play_button" android:background="@drawable/play_button" android:layout_width="50dp" android:layout_height="50dp" android:contentDescription="@string/rich_notification_play_button" android:layout_marginEnd="20dp"/>
    </FrameLayout>
</LinearLayout>
