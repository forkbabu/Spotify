<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="bottom" android:orientation="horizontal" android:background="@drawable/mobile_artist_concert_header" android:padding="@dimen/cell_margin" android:layout_width="match_parent" android:layout_height="130dp">
            <ImageView android:id="@+id/image" android:layout_width="100dp" android:layout_height="100dp" android:src="@drawable/bg_placeholder_artist" android:scaleType="centerCrop"/>
            <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="@dimen/cell_margin">
                <TextView android:textAppearance="?attr/pasteTextAppearanceHeading" android:id="@+id/artist_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="1dp" android:maxLines="1"/>
                <TextView android:textAppearance="?attr/pasteTextAppearanceSecondary" android:textSize="15dp" android:id="@+id/in_concert_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="6dp" android:text="@string/mobile_artist_concert_in_concert" android:textAllCaps="true"/>
                <Button android:id="@+id/go_to_artist" android:paddingLeft="16dp" android:paddingTop="4dp" android:paddingRight="16dp" android:paddingBottom="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/mobile_artist_concert_go_to_artist" android:includeFontPadding="false" android:filterTouchesWhenObscured="false" style="?attr/pasteButtonStyleInfoSmall"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/cell_margin">
            <ImageView android:id="@+id/calendar" android:layout_width="@dimen/cell_height" android:layout_height="@dimen/cell_height"/>
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="@dimen/cell_margin">
                <TextView android:id="@+id/concert_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="2"/>
                <TextView android:textAppearance="?attr/pasteTextAppearanceSecondary" android:id="@+id/concert_date" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                <TextView android:textAppearance="?attr/pasteTextAppearanceSecondary" android:id="@+id/full_venue_address" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <Button android:id="@+id/tickets" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/cell_margin" android:layout_marginTop="7dp" android:layout_marginRight="@dimen/cell_margin" android:layout_marginBottom="7dp" android:text="@string/mobile_artist_concert_tickets_button" android:filterTouchesWhenObscured="false" style="?attr/pasteButtonStylePrimary"/>
        <TextView android:textSize="10dp" android:textColor="?attr/pasteColorTextSecondary" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="14dp" android:layout_marginBottom="7dp" android:text="@string/mobile_artist_concert_supplied_by" android:includeFontPadding="false" android:drawableRight="@drawable/mobile_artist_concert_songkick" android:drawablePadding="3dp"/>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/cell_margin" android:layout_marginRight="@dimen/cell_margin" android:layout_marginBottom="@dimen/cell_margin">
            <LinearLayout android:orientation="vertical" android:background="@color/gray_15" android:padding="@dimen/cell_margin" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="@dimen/cell_margin" android:paddingEnd="@dimen/cell_margin">
                <TextView android:id="@+id/venue_name" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                <TextView android:textAppearance="?attr/pasteTextAppearanceSecondary" android:id="@+id/venue_city" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2dp"/>
            </LinearLayout>
            <ImageView android:id="@+id/map" android:background="#f2f2f2" android:layout_width="match_parent" android:layout_height="200dp" android:scaleType="centerCrop" android:contentDescription="@string/mobile_artist_concert_content_description_map"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
