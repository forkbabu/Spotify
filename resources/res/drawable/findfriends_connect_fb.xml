<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="@dimen/cat_button_border_width" android:color="#4365b0"/>
            <solid android:color="#4365b0"/>
            <size android:height="@dimen/cat_button_height"/>
            <corners android:radius="@dimen/cat_button_corner_radius"/>
            <padding android:left="@dimen/cat_button_padding" android:top="0px" android:right="@dimen/cat_button_padding" android:bottom="0px"/>
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="@dimen/cat_button_border_width" android:color="#3a5897"/>
            <solid android:color="#3a5897"/>
            <size android:height="@dimen/cat_button_height"/>
            <corners android:radius="@dimen/cat_button_corner_radius"/>
            <padding android:left="@dimen/cat_button_padding" android:top="0px" android:right="@dimen/cat_button_padding" android:bottom="0px"/>
        </shape>
    </item>
</selector>
