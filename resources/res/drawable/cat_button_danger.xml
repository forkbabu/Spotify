<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <stroke android:width="@dimen/cat_button_border_width" android:color="@color/red"/>
            <size android:height="@dimen/cat_button_height"/>
            <corners android:radius="@dimen/cat_button_corner_radius"/>
            <padding android:left="@dimen/cat_button_corner_radius" android:top="0px" android:right="@dimen/cat_button_corner_radius" android:bottom="0px"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <stroke android:width="@dimen/cat_button_border_width" android:color="@color/red"/>
            <size android:height="@dimen/cat_button_height"/>
            <corners android:radius="@dimen/cat_button_corner_radius"/>
            <padding android:left="@dimen/cat_button_corner_radius" android:top="0px" android:right="@dimen/cat_button_corner_radius" android:bottom="0px"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="@dimen/cat_button_border_width" android:color="@color/red"/>
            <size android:height="@dimen/cat_button_height"/>
            <corners android:radius="@dimen/cat_button_corner_radius"/>
            <padding android:left="@dimen/cat_button_corner_radius" android:top="0px" android:right="@dimen/cat_button_corner_radius" android:bottom="0px"/>
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="2dp" android:color="@color/red"/>
            <size android:height="@dimen/cat_button_height"/>
            <corners android:radius="@dimen/cat_button_corner_radius"/>
            <padding android:left="@dimen/cat_button_corner_radius" android:top="0px" android:right="@dimen/cat_button_corner_radius" android:bottom="0px"/>
        </shape>
    </item>
</selector>
