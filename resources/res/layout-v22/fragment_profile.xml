<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/content_container" android:layout_width="match_parent" android:layout_height="match_parent">
        <androidx.coordinatorlayout.widget.CoordinatorLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <com.google.android.material.appbar.AppBarLayout android:id="@+id/header_view_portrait" android:layout_width="match_parent" android:layout_height="wrap_content" app:elevation="0dp">
                <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/header_content" android:paddingLeft="64dp" android:paddingTop="@dimen/std_16dp" android:paddingRight="64dp" android:paddingBottom="@dimen/std_8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/content_area_horizontal_margin" android:layout_marginRight="@dimen/content_area_horizontal_margin" android:paddingStart="64dp" android:paddingEnd="64dp" android:layout_marginHorizontal="@dimen/content_area_horizontal_margin" app:layout_scrollFlags="1">
                    <ImageView android:layout_gravity="center" android:id="@+id/profile_image" android:layout_width="@dimen/profile_image_size" android:layout_height="@dimen/profile_image_size" android:layout_marginTop="@dimen/std_8dp" android:layout_marginBottom="@dimen/std_16dp" android:contentDescription="@string/profile_picture_description" android:transitionName="profile_image"/>
                    <TextView android:textAppearance="?attr/pasteTextAppearanceHeaderMedium" android:textColor="@color/white" android:ellipsize="end" android:gravity="center_horizontal" android:id="@+id/profile_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/std_16dp" android:maxLines="1" app:autoSizeTextType="uniform"/>
                    <ToggleButton android:layout_gravity="center" android:id="@+id/follow_button" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/std_16dp" android:textOn="@string/profile_follow_button_following" android:textOff="@string/profile_follow_button_follow" android:filterTouchesWhenObscured="false" style="?attr/pasteButtonStyleSmall"/>
                    <Button android:layout_gravity="center" android:id="@+id/edit_button" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/std_16dp" android:text="@string/profile_edit_button" android:filterTouchesWhenObscured="false" style="?attr/pasteButtonStyleSmall"/>
                </LinearLayout>
            </com.google.android.material.appbar.AppBarLayout>
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/recycler_view" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="@dimen/content_area_horizontal_margin" android:layout_marginRight="@dimen/content_area_horizontal_margin" android:overScrollMode="never" android:layout_marginHorizontal="@dimen/content_area_horizontal_margin" app:elevation="0dp" app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </FrameLayout>
</FrameLayout>
