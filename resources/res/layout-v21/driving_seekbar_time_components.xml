<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <SeekBar android:id="@+id/seek_bar" android:focusable="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxHeight="@dimen/driving_seekbar_height" android:minHeight="@dimen/driving_seekbar_height" android:splitTrack="false" style="@style/DrivingPlayerSeekBar"/>
    <FrameLayout android:layout_gravity="top" android:id="@+id/timestamps" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/driving_seekbar_half_size">
        <com.spotify.mobile.android.ui.view.SuppressLayoutTextView android:textAppearance="?attr/pasteTextAppearanceSecondary" android:textSize="16sp" android:textColor="@color/gray_70" android:layout_gravity="start" android:id="@+id/position" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
